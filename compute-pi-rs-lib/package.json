{
  "name": "compute-pi-rs-lib",
  "version": "0.1.0",
  "description": "",
  "main": "index.node",
  "scripts": {
    "build": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "build-debug": "npm run build --",
    "build-release": "npm run build -- --release",
    "cross-build": "cargo-cp-artifact -nc index.node -- cross build --message-format=json-render-diagnostics",
    "build-x86": "npm run cross-build -- --release --target x86_64-unknown-linux-gnu", 
    "build-arm64": "npm run cross-build -- --release --target aarch64-unknown-linux-gnu",
    "install": "npm run build-release",
    "test": "cargo test"
  },
  "author": "Ervin Szilagyi",
  "license": "ISC",
  "devDependencies": {
    "cargo-cp-artifact": "^0.1"
  }
}
